@model List<AfribaseAuction.Models.Sale>
@{
    ViewData["Title"] = "Sales";
}


<h2 class="text-center mb-4">Sales</h2>

<div class="container">
    <table class="table table-striped table-bordered">
        <thead class="table-warning">
            <tr>
                <th>#</th>
                <th>Buyer</th>
                <th>Artwork</th>
                <th>Artist</th>
                <th>Value (R)</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].Buyer</td>
                    <td>@Model[i].Artwork</td>
                    <td>@Model[i].Artist</td>
                    <td>@Model[i].Value.ToString("N0")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    body {
        background-color: #fff6cc;
        font-family: 'Segoe UI', sans-serif;
    }

    .header {
        background-color: #5d3a3a;
        color: white;
        padding: 20px;
        font-size: 28px;
        font-weight: bold;
    }

        .header span {
            color: #fff6cc;
        }

    .nav {
        display: flex;
        gap: 20px;
        padding: 10px;
        font-size: 18px;
    }

        .nav a {
            color: white;
            text-decoration: none;
            padding: 5px 15px;
            border-radius: 10px;
            background-color: transparent;
            border: 2px solid transparent;
        }

            .nav a.active {
                background-color: white;
                color: #5d3a3a;
                border-color: #fff6cc;
            }

    .sales-section {
        padding: 30px;
    }

    .sales-title {
        background-color: #fff3b3;
        padding: 10px 20px;
        font-weight: bold;
        display: inline-block;
        font-size: 24px;
        border-radius: 6px;
    }

    .sales-list {
        margin-top: 20px;
        background-color: #fff2b2;
        padding: 15px;
        border-radius: 10px;
    }

    .sales-item {
        padding: 10px;
        border-bottom: 1px solid #eee;
    }

        .sales-item:last-child {
            border-bottom: none;
        }
</style>

<div class="header">
    Afribase
    <div class="nav">
        <a href="/Bids">All bids</a>
        <a href="/Users">Users</a>
        <a href="/Items">All items</a>
        <a class="active" href="/Sales">Sales</a>
    </div>
</div>

<div class="sales-section">
    <div class="sales-title">📟 Sales</div>
    <div class="sales-list">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="sales-item">
                @($"{i + 1}. {Model[i].Buyer} | Artwork: {Model[i].Artwork} | Value: {Model[i].Value}")
            </div>
        }
    </div>
</div>
