@model AfribaseAuction.ViewModels.LoginViewModel

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div>
        <input asp-for="Email" class="form-control" placeholder="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div>
        <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div>
        <input asp-for="RememberMe" type="checkbox" /> Remember Me
    </div>

    <button type="submit" class="btn btn-primary">Login</button>

    <div>
        <a asp-action="ForgotPassword">Forgot password?</a> |
        <a asp-action="Register">Don't have an account? Register</a>
    </div>
</form>
